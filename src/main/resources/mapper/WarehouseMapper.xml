<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plz.modules.mapper.WarehouseMapper">
  <resultMap id="BaseResultMap" type="com.plz.modules.model.Warehouse">
    <result column="t_id" jdbcType="INTEGER" property="id" />
    <result column="t_name" jdbcType="VARCHAR" property="name" />
    <result column="t_leader" jdbcType="VARCHAR" property="leader" />
    <result column="t_leader_phone" jdbcType="VARCHAR" property="leaderPhone" />
    <result column="t_sort" jdbcType="TINYINT" property="sort" />
    <result column="t_remark" jdbcType="VARCHAR" property="remark" />
    <result column="t_status" jdbcType="TINYINT" property="status" />
  </resultMap>

  <sql id="Base_Column">
    t_id, t_name, t_leader, t_leader_phone, t_sort, t_remark, t_status
  </sql>

  <select id="list" resultMap="BaseResultMap">
    SELECT
        <include refid="Base_Column"/>
    FROM
        t_warehouse
    WHERE 1=1
    <if test="query.name != null and query.name != ''">
        AND t_name LIKE concat('%', #{query.name}, '%')
    </if>
    <if test="query.status != null">
        AND t_status = #{query.status}
    </if>
    ORDER BY t_sort DESC
  </select>

</mapper>